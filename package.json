{
    "name": "vue3-ts-tpl",
    "author": "Perlou",
    "version": "0.0.1",
    "private": false,
    "description": "Vite2.x + Vue3 + TypeScript template starter",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "serve": "vite preview",
        "cli": "ts-node --transpile-only --skip-project dev-packages/cli/cli.ts",
        "format": "prettier --write ./src",
        "lint": "eslint ./src --ext .vue,.js,.ts",
        "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts",
        "prepare": "husky install",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:Perlou/vue3-ts-tpl.git"
    },
    "keywords": [
        "Vite",
        "Vue3",
        "TypeScript"
    ],
    "bugs": {
        "url": "https://github.com/Perlou/vue3-ts-tpl/issues"
    },
    "homepage": "https://github.com/Perlou/vue3-ts-tpl#readme",
    "lint-staged": {
        "*.{vue,js,ts}": "eslint --fix"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        }
    },
    "dependencies": {
        "axios": "^0.24.0",
        "element-plus": "^1.2.0-beta.3",
        "moment": "^2.29.1",
        "vue": "^3.2.16",
        "vue-router": "^4.0.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/jest": "^27.0.3",
        "@types/yargs": "^17.0.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@vitejs/plugin-vue": "^1.9.3",
        "@vue/compiler-sfc": "^3.2.22",
        "@vue/test-utils": "^2.0.0-rc.16",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^6.3.0",
        "eslint": "^8.3.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^25.2.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^8.1.1",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^12.0.3",
        "metalsmith": "^2.3.0",
        "mustache": "^4.2.0",
        "prettier": "^2.4.1",
        "sass": "^1.43.4",
        "ts-jest": "^27.0.7",
        "typescript": "^4.4.3",
        "vite": "^2.6.4",
        "vite-plugin-element-plus": "^0.0.12",
        "vue-jest": "^5.0.0-alpha.10",
        "vue-tsc": "^0.29.5",
        "yarg": "^1.0.8"
    }
}
